<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.objectFactory" value="spring"/>
    <constant name="struts.objectFactory.spring.autoWire" value="type"/>
    <constant name="struts.objectFactory.spring.autoWire.alwaysRespect" value="true"/>
    <constant name="struts.ui.theme" value="simple"/>
    <constant name="struts.custom.i18n.resources" value="globalMessages"/>
    <constant name="struts.custom.i18n.resources" value="globalMessages"/>
    <constant name="struts.i18n.reload" value="false"/>
    <!-- Should be false for production system or all hell will break loose-->
    <constant name="struts.devMode" value="false"/>
    <!-- Should be false for production system or all hell will break loose-->
    <constant name="struts.xslt.nocache" value="false"/>
    <!-- Should be false for production system or all hell will break loose-->
    <constant name="struts.configuration.xml.reload" value="false"/>
    <!-- Should be false for production system or all hell will break loose-->
    <constant name="struts.freemarker.templatesCache" value="true"/>
    <!--  Should be true or things will run slowly -->


    <constant name="struts.convention.exclude.parentClassLoader" value="false"/>
    <constant name="struts.convention.classLoader.excludeParent" value="false"/>
    <constant name="struts.convention.action.fileProtocols" value="jar"/>
    <!-- bean type="org.apache.struts2.convention.ActionNameBuilder" name="convention" class="org.apache.struts2.convention.DefaultActionNameBuilder"/ -->
    <!-- constant name="struts.convention.action.includeJars" value=""-->

    <constant name="struts.convention.result.path" value="/WEB-INF/"/>
    <!--constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/-->
    <!-- These properties are used by struts fileupload -->
    <constant name="struts.multipart.maxSize" value="10000000" />
    <constant name="struts.multipart.saveDir" value="." />
</struts>
